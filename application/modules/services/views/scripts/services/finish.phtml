                    $('#' + value).attr('disabled','disabled').parents('dd').hide();
                    $('#' + value).attr('disabled','disabled').parents('dd').prev().hide();
                    $('#submit').parents('dd').hide();
                    $('#cancel').hide();
                }
            });
